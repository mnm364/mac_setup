export PATH="$MAC_SETUP/bin":$PATH

### BEGIN SETUP MYSQL ###

export PATH="$HOMEBREW_PREFIX/opt/mysql-client@8.0/bin:$PATH"

# Easy connect to local MySQL server
export MYSQL_USERNAME=root
export MYSQL_HOST=localhost

### END SETUP MYSQL ###

### BEGIN SETUP ANDROID ###

export ANDROID_HOME="$HOME/Library/Android/sdk"
export PATH="$ANDROID_HOME/emulator:$ANDROID_HOME/cmdline-tools/latest/bin:$ANDROID_HOME/platform-tools:$PATH"
# Add Android Studio `studio` command to PATH
export PATH="/Applications/Android Studio.app/Contents/MacOS":$PATH

### END SETUP ANDROID ###

# Add Sublime Text `subl` command to PATH
export PATH="/Applications/Sublime Text.app/Contents/SharedSupport/bin:$PATH"
